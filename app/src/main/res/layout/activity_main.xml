<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.wikidates.MainActivity">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="111dp"
            android:id="@+id/frameLayout3">

        <EditText
                android:background="#469C95"
                android:textSize="26sp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cursorVisible="false"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/editText2"
                tools:layout_editor_absoluteY="443dp" tools:layout_editor_absoluteX="154dp"/>
    </FrameLayout>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/frameLayout"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="170dp">

        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:fillViewport="true"
                android:background="#C7C4C4"
                tools:layout_editor_absoluteY="306dp">
            <TextView
                    android:textSize="18sp"
                    android:scrollHorizontally="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView" tools:layout_editor_absoluteY="306dp"/>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>
    <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintStart_toEndOf="@+id/frameLayout2"
            android:layout_marginStart="2dp" app:layout_constraintEnd_toStartOf="@+id/frameLayout5"
            android:layout_marginEnd="2dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="58dp">

        <Button
                android:layout_gravity="right"

                android:text="Случайный&#10; выбор"

                android:background="@drawable/ripple"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/button2"
                tools:layout_editor_absoluteX="76dp" tools:layout_editor_absoluteY="519dp"/>
    </FrameLayout>
    <FrameLayout

            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/frameLayout2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="0dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="58dp">
        <Button
                android:gravity="center"
                android:background="@drawable/ripple"
                android:text="Выбрать дату"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button1"
                tools:layout_editor_absoluteY="285dp" tools:layout_editor_absoluteX="6dp"/>
    </FrameLayout>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/frameLayout6">

        <Button
                android:gravity="center"
                android:background="@drawable/ripple"
                android:text="Загрузить"
                android:paddingBottom="1dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button"
                tools:layout_editor_absoluteY="285dp" tools:layout_editor_absoluteX="4dp"/>
    </FrameLayout>
    <FrameLayout
            android:layout_width="120dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="58dp" android:id="@+id/frameLayout5">

        <Button
                android:layout_gravity="right"

                android:text="Ввести дату"
                android:background="@drawable/ripple"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/button3"
                tools:layout_editor_absoluteX="76dp" tools:layout_editor_absoluteY="519dp"/>
    </FrameLayout>
    <FrameLayout
            android:layout_width="64dp"
            android:layout_height="52dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="0dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="111dp" android:id="@+id/frameLayout8">

        <Button
                android:text="-1 day"
                android:background="@drawable/ripple"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/button4" tools:layout_editor_absoluteY="430dp"
                tools:layout_editor_absoluteX="16dp"/>
    </FrameLayout>
    <FrameLayout
            android:layout_width="64dp"
            android:layout_height="52dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="111dp">

        <Button
                android:text="+1 day"
                android:layout_width="match_parent"
                android:background="@drawable/ripple"

                android:layout_height="match_parent" android:id="@+id/button5" tools:layout_editor_absoluteY="430dp"
                tools:layout_editor_absoluteX="288dp"/>
    </FrameLayout>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="160dp"
            android:id="@+id/frameLayout4">

        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar" tools:layout_editor_absoluteY="403dp"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>